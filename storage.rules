rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Autorise la lecture et l'écriture sur tous les chemins
    // Autorise un utilisateur à lire et écrire uniquement dans son propre dossier de rapports photos.
    match /photo_reports/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Nouvelle règle pour les rapports complets
    match /reports/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Règle par défaut pour les autres fichiers (bloque tout par sécurité)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}